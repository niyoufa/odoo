<openerp>
 <data>

    <record id="action_dhui_good_all" model="ir.actions.act_window">
        <field name="name">所有商品</field>
        <field name="model">product.template</field>
    </record>

    <record model="ir.ui.view" id="dhuistock_good_list">
        <field name="name">所有商品</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="sku"/>
            </field>
            <field name="uom_id" position="after">
                <field name="dhui_user_id"/>
            </field>
        </field>
    </record>

  <!--导航栏菜单-->
  <menuitem sequence="0" id="menu_dhui_shoppingmall" name="东汇商城"/>

  <!--商品-->
  <menuitem id="menu_dhui_good" parent="menu_dhui_shoppingmall"
            name="商品"/>
  <menuitem id="menu_dhui_good_all"
            parent="menu_dhui_good"
            action="action_dhui_good_all"/>

  <!--订单-->
  <record id="action_menu_dhui_order_all" model="ir.actions.act_window">
      <field name="name">所有订单</field>
      <field name="res_model">sale.order</field>
  </record>

  <record model="ir.ui.view" id="dhuistock_order_list">
    <field name="name">所有订单</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_tree"/>
    <field name="arch" type="xml">
        <field name="state" position="after">
            <field name="_id"/>
            <field name="order_customer_id"/>
            <field name="order_address_id"/>
            <field name="order_purchase_time"/>
        </field>
    </field>
  </record>

  <menuitem id="menu_dhui_order"
            parent="menu_dhui_shoppingmall"
            name="订单"/>
  <menuitem id="menu_dhui_order_list_all"
            parent="menu_dhui_order"
            action="action_menu_dhui_order_all"/>

  <!--发货单-->
  <record id="action_menu_dhui_order_deliver" model="ir.actions.act_window">
      <field name="name">发货单</field>
      <field name="res_model">purchase.order</field>
  </record>
  <menuitem id="menu_dhui_order_deliver"
            parent="menu_dhui_order"
            action="action_menu_dhui_order_deliver"/>

 </data>
</openerp>